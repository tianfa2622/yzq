{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "node"],
    "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
    "baseUrl": ".",
    "paths": {
      "/@/*": ["./src/*"]
    },
    "removeComments": true,
    "outDir": "./dist"
  },
  "include": ["**/*.ts"]
}
